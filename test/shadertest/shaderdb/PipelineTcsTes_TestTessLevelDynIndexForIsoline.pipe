[TcsGlsl]
#version 450 core

layout(vertices = 3) out;

void main (void)
{
    int i = gl_InvocationID % 2;
    gl_TessLevelInner[i] = 1.25;

    int j = gl_InvocationID % 4;
    gl_TessLevelOuter[j] = 2.0;
}

[TcsInfo]
entryPoint = main

[TesGlsl]
#version 450 core

layout(isolines) in;

layout(location = 0) out vec3 outColor;

void main()
{
    outColor = vec3(0.0);
}

[TesInfo]
entryPoint = main

[GraphicsPipelineState]
patchControlPoints = 3
