#version 450 core
#extension GL_AMD_gpu_shader_int16 : enable


layout(set = 0, binding = 0) uniform UBO {
    int16_t m1;
    int16_t m2;
    i16vec4 m3[64];
};

layout(set = 1, binding = 0) buffer SSBO {
    i16vec4 mOut;
};

void main()
{
    int16_t a = m1 + m2;
    i16vec4 b = m3[6];
    memoryBarrierBuffer();
    i16vec4 c = m3[int(a)];
    mOut = i16vec4(a) + b + c;
}
