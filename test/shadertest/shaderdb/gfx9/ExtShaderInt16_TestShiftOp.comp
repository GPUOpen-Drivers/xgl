#version 450 core
#extension GL_AMD_gpu_shader_int16 : enable

layout(set = 0, binding = 0) uniform UBO {
    int16_t m1;
    uint16_t m2;
};

layout(set = 1, binding = 0) buffer SSBO {
    int16_t mOut1;
    uint16_t mOut2;
    uint16_t mOut3;
};

void main()
{
    mOut1 = m1 >> 3;
    mOut2 = m2 >> 3;
    mOut3 = m1 << 3;
}
